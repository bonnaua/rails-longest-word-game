<h1>New game</h1>

<% @letters.each do |letter| %>
  <ul>
    <li>
      <%= letter %>
    </li>
  </ul>
<% end %>

<form action="/score" method="post"> What is the longest word you can find ?
  <input type="text"
         name="word"
         value = "<%= params[:word] %>">
  <input type="submit" value="Play">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>


